# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# AI Provider API Key
# Get Claude API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# n8n Webhook Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id
N8N_API_KEY=your_n8n_api_key_here
WEBHOOK_SECRET=your_webhook_signing_secret_here

# App Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ============================================================================
# Performance Optimization Configuration
# ============================================================================

# Read Replica Configuration
NEXT_PUBLIC_ENABLE_READ_REPLICA=false
NEXT_PUBLIC_SUPABASE_REPLICA_URL=your_replica_url_here
NEXT_PUBLIC_SUPABASE_REPLICA_ANON_KEY=your_replica_anon_key_here
READ_REPLICA_FALLBACK=true
READ_REPLICA_HEALTH_CHECK_INTERVAL=30000

# PgBouncer Connection Pooling
# Use PgBouncer URL instead of direct database connection for better performance
# DATABASE_URL=postgresql://user:password@localhost:6432/database

# Database Monitoring
ENABLE_QUERY_LOGGING=false
ENABLE_SLOW_QUERY_LOGGING=true
SLOW_QUERY_THRESHOLD_MS=1000
ENABLE_DB_MONITORING=true
DB_MONITORING_INTERVAL_MS=60000

# Connection Pool Monitoring
ENABLE_CONNECTION_MONITORING=true
CONNECTION_POOL_ALERT_THRESHOLD=80

# Performance Metrics
ENABLE_PERFORMANCE_METRICS=true
METRICS_EXPORT_INTERVAL_MS=30000