# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# AI Provider API Key
# Get Claude API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# n8n Webhook Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id
N8N_API_KEY=your_n8n_api_key_here
WEBHOOK_SECRET=your_webhook_signing_secret_here

# App Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# =====================================================
# AUTHENTICATION & AUTHORIZATION CONFIGURATION
# =====================================================

# Redis Configuration for Session Management
# For local development: redis://localhost:6379
# For Docker: redis://redis:6379
# For production: Use managed Redis service (AWS ElastiCache, Redis Cloud, etc.)
REDIS_URL=redis://localhost:6379

# MFA Configuration
# IMPORTANT: Generate secure keys for production
# Use: openssl rand -base64 32
MFA_ENCRYPTION_KEY=your-mfa-encryption-key-change-me-use-openssl-rand-base64-32

# OAuth Encryption Key
# IMPORTANT: Generate secure key for production
# Use: openssl rand -base64 32
OAUTH_ENCRYPTION_KEY=your-oauth-encryption-key-change-me-use-openssl-rand-base64-32

# Twilio Configuration for SMS MFA
# Get credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# OAuth 2.0 Providers Configuration

# Google OAuth
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Microsoft OAuth
# Get credentials from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# LinkedIn OAuth
# Get credentials from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# OAuth Callback URLs (update based on your domain)
# For local development:
NEXT_PUBLIC_OAUTH_CALLBACK_URL=http://localhost:3000/api/auth/callback
# For production:
# NEXT_PUBLIC_OAUTH_CALLBACK_URL=https://yourdomain.com/api/auth/callback

# Security Configuration

# Brute Force Protection
# Maximum failed login attempts before lockout
MAX_LOGIN_ATTEMPTS=5
# Time window in minutes to track failed attempts
LOGIN_ATTEMPT_WINDOW_MINUTES=15
# Account lockout duration in minutes
ACCOUNT_LOCKOUT_MINUTES=30

# Session Configuration
# Session expiration time in seconds (default: 7 days)
SESSION_EXPIRY_SECONDS=604800
# Maximum concurrent sessions per user (0 = unlimited)
MAX_CONCURRENT_SESSIONS=5

# Rate Limiting
# Default API key rate limits
DEFAULT_RATE_LIMIT_PER_HOUR=1000
DEFAULT_RATE_LIMIT_PER_DAY=10000

# Security Event Retention
# Days to retain login attempts (for cleanup)
LOGIN_ATTEMPTS_RETENTION_DAYS=30
# Days to retain audit logs
AUDIT_LOG_RETENTION_DAYS=365
# Days to retain security events
SECURITY_EVENTS_RETENTION_DAYS=90