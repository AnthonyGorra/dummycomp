# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# AI Provider API Key
# Get Claude API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# n8n Webhook Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id
N8N_API_KEY=your_n8n_api_key_here
WEBHOOK_SECRET=your_webhook_signing_secret_here

# App Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ======================================
# NETWORK SECURITY CONFIGURATION
# ======================================

# IP Whitelisting
# Enable IP whitelisting for admin routes (recommended for production)
ENABLE_IP_WHITELIST=false
# Comma-separated list of allowed IPs, CIDR ranges, or IP ranges
# Examples:
#   Single IP: 1.2.3.4
#   CIDR range: 192.168.1.0/24
#   IP range: 10.0.0.1-10.0.0.255
#   VPN network: 10.8.0.0/24
ADMIN_IP_WHITELIST=127.0.0.1,::1,10.8.0.0/24

# VPN Configuration
# Require VPN connection for admin routes in production
REQUIRE_VPN=false

# Rate Limiting Configuration
# API endpoints (requests per minute)
API_RATE_LIMIT_WINDOW=60000
API_RATE_LIMIT_MAX=100

# Authentication endpoints (requests per 15 minutes)
AUTH_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX=5

# Admin endpoints (requests per 15 minutes)
ADMIN_RATE_LIMIT_WINDOW=900000
ADMIN_RATE_LIMIT_MAX=100

# ======================================
# DATABASE CONFIGURATION
# ======================================

# PostgreSQL (for network segmentation setup)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crm_database
DB_USER=crm_user
DB_PASSWORD=your_secure_database_password_here

# Redis (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# ======================================
# SSL/TLS CONFIGURATION
# ======================================

# Domain for SSL certificate
DOMAIN=yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# ======================================
# CLOUDFLARE CONFIGURATION (Optional)
# ======================================

# Cloudflare API credentials for DDoS protection
CLOUDFLARE_EMAIL=your-cloudflare-email@example.com
CLOUDFLARE_API_KEY=your_cloudflare_global_api_key
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# ======================================
# AWS CONFIGURATION (Optional)
# ======================================

# AWS credentials for Shield/WAF deployment
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# ======================================
# MONITORING & ALERTS
# ======================================

# Email for security alerts
ALERT_EMAIL=admin@yourdomain.com

# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty integration (optional)
PAGERDUTY_API_KEY=your_pagerduty_api_key
PAGERDUTY_SERVICE_ID=your_pagerduty_service_id

# ======================================
# DEVELOPMENT SETTINGS
# ======================================

NODE_ENV=development
# Set to 'production' for production deployment