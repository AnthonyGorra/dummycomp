# AWS Configuration
aws_region  = "us-east-1"
environment = "production"
app_name    = "crm-app"

# IP Whitelisting
admin_ip_whitelist = [
  "1.2.3.4/32",      # Office IP
  "5.6.7.8/32",      # Admin home IP
  "10.8.0.0/24",     # VPN range (WireGuard)
]

# Geographic blocking (ISO 3166-1 alpha-2 country codes)
blocked_countries = [
  # Add countries to block, e.g.:
  # "CN",  # China
  # "RU",  # Russia
  # "KP",  # North Korea
]

# Security alerts
alert_email = "admin@yourdomain.com"
